<h1>Purchase Orders</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each purch_orders.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the id, fname, lname, homeworld and age }}
        {{#each purch_orders}}
        <tr>
            <td>{{this.PurchaseOrderNo}}</td>
            <td>{{this.Supplier}}</td>
            <td>{{this.Date}}</td>
            <td>{{this.Total}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
